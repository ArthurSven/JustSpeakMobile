<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lauterbach.justspeak">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_starter1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_starter1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JustSpeak"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.JustSpeak">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JustSpeak" />
        <activity
            android:name=".SecondActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".German.GermanActivity"
            android:exported="true"
            android:theme="@style/Theme.JustSpeak" />
        <activity android:name=".German.GermanGrammar.GermanAlphabet"
            android:exported="true"
            android:theme="@style/Theme.JustSpeak"
            android:parentActivityName=".German.GermanActivity"/>
        <activity android:name=".German.GermanGrammar.GermanAdjectives"
            android:exported="true"
            android:theme="@style/Theme.JustSpeak"
            android:parentActivityName=".German.GermanActivity"/>
        <activity android:name=".German.GermanGrammar.GermanCases"
            android:theme="@style/Theme.JustSpeak"
            android:exported="true"/>
    </application>

</manifest>